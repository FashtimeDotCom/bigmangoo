<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <!-- 公共装饰器 -->
    <screen name="main-decorator">
        <section>
            <actions>

                <set field="THEME_ID" global="true" default-value="flatui"/>

            </actions>
            <widgets>

                <decorator-section-include name="body"/>

            </widgets>
        </section>
    </screen>

    <!-- 网站头部 -->
    <screen name="site-header">
        <section>
            <widgets>

                <decorator-screen name="main-decorator">
                    <decorator-section name="body">

                        <platform-specific>
                            <html><html-template location="component://${THEME_ID}/webapp/${THEME_ID}/site-header.ftl"/></html>
                        </platform-specific>

                        <include-screen name="site-navbar"/>

                    </decorator-section>
                </decorator-screen>

            </widgets>
        </section>
    </screen>

    <!-- 顶部导航条 -->
    <screen name="site-navbar">
        <section>
            <widgets>

                <decorator-screen name="main-decorator" >
                    <decorator-section name="body">

                        <platform-specific>
                            <html><html-template location="component://${THEME_ID}/webapp/${THEME_ID}/navbar.ftl"/></html>
                        </platform-specific>

                    </decorator-section>
                </decorator-screen>

            </widgets>
        </section>
    </screen>

</screens>
