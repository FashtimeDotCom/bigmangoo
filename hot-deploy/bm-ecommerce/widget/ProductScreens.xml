<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <!-- 产品分类视图 -->
    <screen name="productCategoryList">
        <section>
            <actions>

                <!-- 网站分类列表 -->
                <set field="leftbarScreenName" value="productCategoryWidget" global="true"/>
                <set field="leftbarScreenLocation" value="component://bm-ecommerce/widget/ProductScreens.xml" global="true"/>

                <!-- 通过分类id取得分类下所有商品 -->
                <script location="component://bm-ecommerce/webapp/bm-ecommerce/WEB-INF/actions/product/productCategoryList.groovy"/>

            </actions>
            <widgets>
                <decorator-screen name="double-column-base-decorator_left" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">

                        <platform-specific>
                            <html><html-template location="component://bm-ecommerce/webapp/${THEME_NAME}/product/productCategoryList.ftl"/></html>
                        </platform-specific>

                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 产品详细视图 -->
    <screen name="productDetail">
        <section>
            <actions>

            </actions>
            <widgets>
                <decorator-screen name="double-column-base-decorator_right" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">

                        <platform-specific>
                            <html><html-template location="component://bm-ecommerce/webapp/${THEME_NAME}/product/productDetail.ftl"/></html>
                        </platform-specific>

                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 网站分类列表 -->
    <screen name="productCategoryWidget">
        <section>
            <actions>

                <script location="component://bm-ecommerce/webapp/bm-ecommerce/WEB-INF/actions/product/productCategoryWidget.groovy"/>

            </actions>
            <widgets>

                <platform-specific>
                    <html><html-template location="component://bm-ecommerce/webapp/${THEME_NAME}/product/productCategoryWidget.ftl"/></html>
                </platform-specific>

            </widgets>
        </section>
    </screen>

</screens>
