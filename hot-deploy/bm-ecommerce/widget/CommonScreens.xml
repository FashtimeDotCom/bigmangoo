<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <!-- 公共装饰器 -->
    <screen name="main-decorator">
        <section>
            <actions>

                <!-- TODO 这段代码需要改写 -->
                <!-- 初始化当前店铺数据 -->
                <script location="component://ecommerce/widget/EcommerceSetup.groovy"/>

                <!-- 设置当前网店使用的模板 -->
                <set field="THEME_NAME" value="bm-ecommerce" global="true"/>

                <!-- 网站logo -->
                <set field="overrideLogo" value="/bm-admin/images/uploads/bm-logo.png" global="true"/>

            </actions>
            <widgets>
                <section>
                    <condition>
                        <not><if-empty field="globalContext.productStore"/></not>
                    </condition>
                    <widgets>

                        <platform-specific>
                            <html><html-template location="component://bm-ecommerce/webapp/${THEME_NAME}/common/header.ftl"/></html>
                        </platform-specific>

                        <container style="container">
                            <decorator-section-include name="body"/>
                        </container>

                        <platform-specific>
                            <html><html-template location="component://bm-ecommerce/webapp/${THEME_NAME}/common/footer.ftl"/></html>
                        </platform-specific>

                    </widgets>
                    <fail-widgets>
                        <label text="当前网站未指定店铺"/>
                    </fail-widgets>
                </section>
            </widgets>
        </section>
    </screen>

    <!-- 首页装饰器 -->
    <screen name="base-decorator">
        <section>
            <actions>

            </actions>
            <widgets>
                <decorator-screen name="main-decorator">
                    <decorator-section name="body">

                        <container style="container">

                            <!-- 网站标题，网站搜索框，个人快速操作栏 -->
                            <platform-specific>
                                <html><html-template location="component://bm-ecommerce/webapp/${THEME_NAME}/common/site-header.ftl"/></html>
                            </platform-specific>

                            <!-- 网站目录导航 -->
                            <include-screen name="siteCatalogWidget" location="component://bm-ecommerce/widget/CatalogScreens.xml"/>

                            <decorator-section-include name="body"/>

                        </container>

                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 双栏装饰器 -->
    <screen name="double-column-base-decorator_left">
        <section>
            <widgets>
                <decorator-screen name="base-decorator">
                    <decorator-section name="body">

                        <container style="row">

                            <container style="col-md-2">
                                <include-screen name="${leftbarScreenName}" location="${leftbarScreenLocation}"/>
                            </container>

                            <container style="col-md-10">
                                <decorator-section-include name="body"/>
                            </container>

                        </container>

                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 双栏装饰器 -->
    <screen name="double-column-base-decorator_right">
        <section>
            <widgets>
                <decorator-screen name="base-decorator">
                    <decorator-section name="body">

                        <container style="row">

                            <container style="col-md-10">
                                <decorator-section-include name="body"/>
                            </container>

                            <container style="col-md-2">
                                <include-screen name="${rightbarScreenName}" location="${rightbarScreenLocation}"/>
                            </container>

                        </container>

                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 三栏装饰器 -->
    <screen name="three-column-base-decorator">
        <section>
            <widgets>
                <decorator-screen name="base-decorator">
                    <decorator-section name="body">

                        <container style="row">
                            <container style="col-md-2">
                                <include-screen name="${leftbarScreenName}" location="${leftbarScreenLocation}"/>
                            </container>
                            <container style="col-md-8">
                                <decorator-section-include name="body"/>
                            </container>
                            <container style="col-md-2">
                                <include-screen name="${rightbarScreenName}" location="${rightbarScreenLocation}"/>
                            </container>
                        </container>

                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>