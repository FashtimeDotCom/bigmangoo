<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main">
        <section>
            <widgets>
                <decorator-screen name="Skull-EcommerceCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/main.ftl"/></html></platform-specific>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="listProducts">
        <section>
            <widgets>
                <decorator-screen name="ProductListDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="left-options">
                        <section>
                            <widgets>
                                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/productlist/left.ftl"/></html></platform-specific>
                            </widgets>
                        </section>
                    </decorator-section>
                    <decorator-section name="right-options">
                        <section>
                            <widgets>
                                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/productlist/right.ftl"/></html></platform-specific>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>