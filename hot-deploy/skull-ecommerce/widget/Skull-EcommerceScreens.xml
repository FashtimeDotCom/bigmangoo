<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <!-- 主页面 -->
    <screen name="main">
        <section>
            <widgets>
                <decorator-screen name="Skull-EcommerceCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/main.ftl"/></html></platform-specific>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 登录页面 -->
    <screen name="login">
        <section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/login.ftl"/></html></platform-specific>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 产品列表页面 -->
    <screen name="listProducts">
        <actions>

        </actions>
        <section>
            <widgets>
                <decorator-screen name="ProductListDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="left-options">
                        <section>
                            <widgets>
                                <include-screen name="listProducts-screening"/>
                                <include-screen name="listProducts-thumbnail"/>
                                <include-screen name="listProducts-pagination"/>
                            </widgets>
                        </section>
                    </decorator-section>
                    <decorator-section name="right-options">
                        <section>
                            <widgets>

                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- 产品列表页筛选 -->
    <screen name="listProducts-screening">
        <section>
            <widgets>
                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/product/listProducts-screening.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <!-- 产品列表页缩略图 -->
    <screen name="listProducts-thumbnail">
        <section>
            <widgets>
                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/product/listProducts-thumbnail.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <!-- 产品列表页面分页 -->
    <screen name="listProducts-pagination">
        <section>
            <widgets>
                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/product/listProducts-pagination.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

</screens>