<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-section-include name="body"/>
            </widgets>
        </section>
    </screen>

    <screen name="Skull-EcommerceCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="SKULL-ECOMMERCE" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <include-screen name="SkullEcommerceCommonHeader"/>
                                <decorator-section-include name="body"/>
                                <include-screen name="SkullEcommerceCommonFooter"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.Skull-EcommerceViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- common头部 -->
    <screen name="SkullEcommerceCommonHeader">
        <section>
            <action>
            </action>
            <widgets>
                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/includes/commonheader.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <!-- common尾部 -->
    <screen name="SkullEcommerceCommonFooter">
        <section>
            <action>
            </action>
            <widgets>
                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/includes/commonfooter.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

</screens>