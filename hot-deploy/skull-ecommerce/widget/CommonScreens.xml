<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <widgets>
                <include-screen name="header"/>
                <decorator-section-include name="body"/>
                <include-screen name="footer"/>
            </widgets>
        </section>
    </screen>

    <!-- html 页面 header -->
    <screen name="header">
        <section>
            <widgets>
                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/includes/header.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <!-- html 页面 footer -->
    <screen name="footer">
        <section>
            <widgets>
                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/includes/footer.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <!--  -->
    <screen name="Skull-EcommerceCommonDecorator">
        <section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <include-screen name="SkullEcommerceCommonHeader"/>
                                <container style="container">
                                    <decorator-section-include name="body"/>
                                    <include-screen name="SkullEcommerceCommonFooter"/>
                                </container>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- common头部 -->
    <screen name="SkullEcommerceCommonHeader">
        <section>
            <widgets>
                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/includes/common/header.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <!-- common尾部 -->
    <screen name="SkullEcommerceCommonFooter">
        <section>
            <widgets>
                <platform-specific><html><html-template location="component://skull-ecommerce/webapp/skull-ecommerce/includes/common/footer.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <!-- 产品页面Decorator -->
    <screen name="ProductListDecorator">
        <section>
            <widgets>
                <decorator-screen name="Skull-EcommerceCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <container style="row">
                                    <container style="col-xs-12 col-md-8">
                                        <decorator-section-include name="left-options"/>
                                    </container>
                                    <container style="col-xs-6 col-md-4">
                                        <decorator-section-include name="right-options"/>
                                    </container>
                                </container>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>